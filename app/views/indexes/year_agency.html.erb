<% title "#{@year} FR Index" %>

<div class="title"><span>FR Index</span></div>

<h1><%= @year %> Federal Register Index: <%= @agency.name %></h1>

<% @entries_by_type.each do |type, entries_by_toc_subject| %>
  <h2><%= type.pluralize %></h2>
  <ul>
  <% entries_by_toc_subject.each do |toc_subject, entries_by_title| %>
    <% if toc_subject %>
      <li><%= toc_subject %>
      <ul>
    <% end %>
    <% entries_by_title.each do |title, entries| %>
      <% id = rand(100000) %> 
      <li>
        <a href="javascript:" data-toggle="collapse" data-target="#<%= id %>">
          <%= title %>
          <span class="count_pill"><%= entries.count %></span>
        </a>
        <ul id="<%= id %>" style="height: 0px; overflow-y: hidden"> 
          <% entries.each do |entry| %>
            <li>
              <%= link_to entry.document_number, entry_path(entry) %>
              page <%= entry.start_page %>, published <%= link_to entry.publication_date, entry_path(entry) %>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
    <% if toc_subject %>
      </ul>
    <% end %>
  <% end %>
  </ul>
<% end %>
