<% title "#{@year} FR Index" %>

<div class="title"><span>FR Index</span></div>

<h1><%= @year %> Federal Register Index</h1>

<% @agencies.each do |agency| %>
  <li><%= link_to agency.name, index_year_agency_path(@year, agency) %> <span class="count_pill"><%= agency.entries_count %></span>
  <% if agency.children.present? %>
    <ul>
      <% agency.children.each do |sub_agency| %>
        <li><span class="see">See</span> <%= link_to sub_agency.name, index_year_agency_path(@year, sub_agency) %> <span class="count_pill"><%= sub_agency.entries_count %></span></li>
      <% end %>
    </ul>
  <% end %>
  </li>
<% end %>
