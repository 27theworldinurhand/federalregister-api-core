<% title @search.term.blank? ? 'Regulation Search' : "Regulation Search Results for '#{h @search.term}'" %>

<h1 class="title"><span>Search Regulations</span></h1>

<% unless @search.valid? %>
<ul class="errors">
  <% @search.errors.each do |err| %>
  <li><%= err %></li>
  <% end %>
</ul>
<% end %>

<%= render :esi => regulatory_plan_search_header_path(params.except(:action)) %>

<% unless @search.blank? %>

  <div class="filters">
    <%= render :esi => regulatory_plan_search_facets_path(params.except(:action).merge(:facet => 'priority_category')) %>
    <%= render :esi => regulatory_plan_search_facets_path(params.except(:action).merge(:facet => 'agency')) %>
  </div>
  
  <%= render :esi => regulatory_plan_search_results_path(params.except(:action)) %>
<% end %>