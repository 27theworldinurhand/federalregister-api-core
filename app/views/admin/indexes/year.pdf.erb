<style>
  @page {
    size: "US-Letter";
    margin-left: 0.63in; 
    margin-right: 0.63in; 
    margin-bottom: 0.83in;
    margin-top: 0.613in;

    @bottom-left {
      content: "FEDERAL REGISTER INDEX, January 2013";
      font-family: 'Open Sans Semibold';
      font-size: 0.65em;
      margin-top: 0.4in;
      margin-bottom: 0.7in;
    }
    @bottom-right {
      content: counter(page);
      font-family: 'Open Sans Semibold';
      font-size: 0.65em;
      margin-top: 0.4in;
      margin-bottom: 0.6in;
    }
  }
  @page :left {
    @top-left {
      font-family: 'Open Sans Bold';
      font-size: 0.75em;
      margin-top: 0.14in;
      content: string(agency_short_name, first);
    }
  }
  @page :right {
    @top-right {
      font-family: 'Open Sans Bold';
      font-size: 0.75em;
      margin-top: 0.14in;
      content: string(agency_short_name, last)
    }
  }

  @page:first {
    @top-right { content: normal; }
    @top-left { content: normal; }
  }

  *[data-agency-name] {
    string-set: agency_short_name attr('data-agency-name');
  }

  body {
    font-family: 'Open Sans';
    font-size: 1em;
    counter-reset: page 1053;
  }
  h1 {
    margin-top: 0.75in;
    margin-bottom: 0.5in;
    font-size: 1.4em;
    font-family: 'Open Sans Bold';
    text-align: center;
  }
  h2 {
    font-family: 'Open Sans Bold';
    font-size: 1.05em;
    padding: 0;
    margin-top: 6pt;
    margin-bottom: 1.5pt;
    margin-left: 0.5em;
    text-indent: -0.5em;
  }


  p {
    padding: 0;
    margin: 0;
  }

  div.index {
    font-size: 0.75em;
    columns: 2;
    column-rule: black solid 0.5pt;
    column-gap: 2em;
  }

  h3 {
    font-family: 'Open Sans Bold';
    font-size: 0.85em;
    margin: 0;
    margin-top: 1pt;
  }

  div.index ul {
    margin: 0;
    margin-left: 2em;
    line-height: 1.3em;
    font-style: 'Open Sans';
    font-size: 0.8em;
  }

  div.index ul ul {
    margin-left: 1em;
    font-size: 0.98em;
  }

  div.index li {
    list-style-type: none;
    text-indent: -2em;
    line-height: 1.2em%;
  }
  .page_break {
    page-break-before: always;
  }
  .item {
    font-style: 'Open Sans Italic';
    page-break-inside: avoid;
    white-space: nowrap;
  }
  .day {
    font-size: 0.97em;
  }

</style>

<body>
  <h1>
    FEDERAL REGISTER INDEX<br>
    January 2013
  </h1>
  <div class="index">
    <%= render :partial => "agency_year", :collection => @agency_years %>
  </div>
</body>
