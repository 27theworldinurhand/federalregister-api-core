<% title 'Entries with events' %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Event Date</th>
      <th>Location</th>
      <th>Article</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.place.name %></td>
        <td><%= event.entry.document_number %> (<%= event.entry.publication_date %>)</td>
        <td>
          <%= link_to 'Edit', edit_admin_event_path(event) %>
          <%= link_to 'Delete', admin_event_path(event), :method => "DELETE", :confirm => "Are you sure you want to delete this?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
