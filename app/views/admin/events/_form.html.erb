<%= f.hidden_field :entry_id %>
<%= f.semantic_errors :place %>

<% f.inputs do %>
  <%= f.input :title %>
  <%= f.input :date, :as => :calendar %>
  <li><label>Location</label>
    <%= f.hidden_field(:place_id) %>
    <span id="event_place_name"><%= f.object.place.try(:name) %></span>
  </li>
  <% unless f.object.new_record? %>
  <li><label>Article</label>
    <%= link_to f.object.entry.document_number, entry_path(f.object.entry) %>
  </li>
  <% end %>
  <%= f.input :remote_call_in_available %>
<% end %>

<% f.buttons do %>
  <%= f.commit_button 'Save' %>
<% end %>