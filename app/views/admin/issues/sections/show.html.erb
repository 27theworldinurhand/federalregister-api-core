<% super_title 'Sections' %>
<% title @section.name %>
<% add_javascript :src => 'admin/issues_sections_highlights' %>

<% nav_secondary(render :partial => 'nav', :locals => {:sections => @sections, :publication_date => @publication_date}) %>

<h3 class='grid_10'>Highlighted Entries</h3>

<ul id="highlighted" class='grid_10'>
<%= render :partial => "highlighted_entry", :collection => @highlighted_entries %>
</ul>


<h3 class='grid_10 push_2'>Entries in this section on <%= @publication_date %></h3>

<dl class='grid_10 push_2'>
<% @section.entries.published_on(@publication_date).each do |entry| %>
  <dt data-entry-id="<%= entry.id %>" class="<%= 'highlighted' if @highlighted_entries.include?(entry) %>"><%= entry.curated_title %></dt>
  <% if entry.significant? %>
    <dd>Economically Significant</dd>
  <% end %>
  <dd>Length: <%= pluralize entry.human_length, 'page' %></dd>
<% end %>
</dl>