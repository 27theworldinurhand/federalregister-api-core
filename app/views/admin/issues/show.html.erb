<% super_title "#{@publication_date} Issue" %>
<% sidebar(render :partial => 'admin/issues/nav', :locals => {:sections => @sections, :publication_date => @publication_date}) %>

<% add_javascript do %>
<script>
  $(document).ready(function(){
    $('input[type=checkbox]').live('click', function(){
      // $(this)
      var form = $($(this).closest('form'));
      form.find('img').remove();
      form.find('h4').prepend('<img src="/images/ui/ui-anim_basic_16x16.gif">')
      $.ajax({
        url: form.attr('action'),
        data: form.serialize(),
        type: 'PUT',
        success: function(){
          form.find('img').remove();
        }
      })
    });
  });
</script>
<% end %>

  <% if @issue_approval.present? %>
  <div class="notice">
    <p>Issue approved on <%= @issue_approval.created_at %>. Any changes made at this time will go live without additional approval.</p>
  </div>
    
  <% else %>
    <%= link_to 'Approve this issue', admin_issue_approval_path(@publication_date.to_s(:db)), :method => :post, :confirm => "Are you sure you wish to approve this issue?" %>
  <% end %>
    
  <%# TODO HELP-DESIGN figure this out %>  
  <% title "Entries not assigned to a section" %>
  
  <ul class="article_list">
    <% @entries_without_sections.each do |entry| %>
      <li>
        <% form_for entry, :url => admin_issue_entry_path(@publication_date.to_s(:iso), entry.document_number) do |f| %>
          <%= link_to(entry.curated_title, edit_admin_issue_entry_path(@publication_date.to_s(:iso), entry.document_number), :title => entry.abstract )%>
          <input type="hidden" name="entry[section_ids][]" value="">
          <ul class="section_list">
            <% @sections.each do |section| %>
              <li>
                <label>
                  <input type="checkbox" name="entry[section_ids][]" value="<%= section.id %>" />
                  <%= section.title %>
                </label>
              </li>  
            <% end %>
          </ul>
        <% end %>
      </li>
    <% end %>
  </ul>    
