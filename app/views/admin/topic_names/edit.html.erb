<% title "Processing '#{@topic_name.name}'" %>

<% semantic_form_for @topic_name, :url => admin_topic_name_path(@topic_name) do |f| %>
  <% f.inputs do %>
    <%= f.input :topic_ids, :as => :select, :input_html => {:multiple => true}, :include_blank => false, :collection => Topic.all %>
    <%= f.hidden_field 'topic_ids[]', :value => '' %>
    <%= f.input :void %>
  <% end %>
  
  <% f.buttons do %>
    <%= f.commit_button %>
    <%= link_to 'Cancel', unprocessed_admin_topic_names_path %>
  <% end %>
<% end %>