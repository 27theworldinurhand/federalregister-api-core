<article class="with_photo <%= cycle('on_left','') %>">
  <div class="info">
    <h1><%= link_to entry.curated_title, entry_path(entry) %></h1>
    
    <p class="metadata">A <%= entry.entry_type %> by <%= entry.agencies_exluding_parents.map{|a| link_to a.name, agency_path(a) }.to_sentence %> on <time datetime="<%= entry.publication_date.to_s(:iso) %>"><%= entry.publication_date %></time></p>
    <p class="summary"><%= entry.curated_abstract %></p>
  </div>
  
  <div class="photo">
    <%  if entry.lede_photo  %>
      <figure>
          <%= image_tag(entry.lede_photo.photo.url(:small)) %>
          <%# TODO HELP-RUBY photo caption - make this real %>
          <figcaption> 
            Photo: DarkSlayer555
          </figcaption>
      </figure>
    <% end -%>
  </div>
  
</article>