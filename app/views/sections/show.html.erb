<%= title @section.name %>

<h1 class="title"><span><%= @section.name %></span></h1>

<div id="content_area">

  <% if @highlighted_entries.present? %>
  <div id="top-articles" class="featured">
    <%#= render :partial => 'sections/primary_entry', :object => @highlighted_entries.first %>
    <%= render :partial => 'sections/entry_with_abstract', :collection => @highlighted_entries[0,3], :as => :entry %>
  </div>

  <div id="fading-articles" class="featured">
    <%= render :partial => 'sections/entry_with_abstract', :collection => @highlighted_entries[3,100], :as => :entry %>
  </div>

  <% else %>
    <p>No articles highlighted.</p>
  <% end %>

</div>

<aside>
  
  <section>
    
    <a href="#" class="button rss">Subscribe</a>
    
    <p><strong>Science and Technology</strong>... A description of what this section is and why it is important. Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        
  </section>
  
  <section class="stats">
    <h1><span>Stats</span></h1>
    <ul>
      <li><strong>1000</strong> Something</li>
      <li><strong>200</strong> Something</li>
      <li><strong>32</strong> Something</li>
      <li><strong>43</strong> Something</li>
    </ul>  
  </section>
  
  <section>
    <h1><span>What's Hot</span></h1>
  </section>
  
</aside>

  
  <h2 class="title">Comment Period <span>Closing Soon</span></h2>

  <ul class="comments clearfix">
    <li class="alpha"> 
      <div class="card"> 
        <a href="/entries/2010/03/16/2010-5647/automotive-fuel-ratings-certification-and-posting">Automotive Fuel Ratings, Certification and Posting</a> 
        <date>05/21/2010</date> 
      </div> 
    </li> 
    
    <li class=""> 
      <div class="card"> 
        <a href="/entries/2010/03/25/2010-6391/fixed-assets-member-business-loans-and-regulatory-flexibility-program">Fixed Assets, Member Business Loans, and Regulatory Flexibility Program</a> 
        <date>05/24/2010</date> 
      </div> 
    </li> 
    
    <li class=""> 
      <div class="card"> 
        <a href="/entries/2010/03/29/2010-6439/fiduciary-duties-at-federal-credit-unions-mergers-and-conversions-of-insured-credit-unions">Fiduciary Duties at Federal Credit Unions; Mergers and Conversions of Insured Credit Unions</a> 
        <date>05/28/2010</date> 
      </div> 
    </li> 
    
    <li class="omega"> 
      <div class="card"> 
        <a href="/entries/2010/04/07/2010-7889/equal-access-to-justice-act-implementation">Equal Access to Justice Act Implementation</a> 
        <date>05/24/2010</date> 
      </div> 
    </li> 
    
    <li class="alpha"> 
      <div class="card"> 
        <a href="/entries/2010/04/19/2010-8911/amendment-of-the-temporary-liquidity-guarantee-program-to-extend-the-transaction-account-guarantee-p">Amendment of the Temporary Liquidity Guarantee Program To Extend the Transaction Account Guarantee Program With Opportunity To Opt Out</a> 
        <date>05/19/2010</date> 
      </div> 
    </li> 
    
    <li class=""> 
      <div class="card"> 
        <a href="/entries/2010/04/26/2010-9434/surety-bond-guarantee-program-disaster-and-miscellaneous-amendments">Surety Bond Guarantee Program; Disaster and Miscellaneous Amendments</a> 
        <date>05/26/2010</date> 
      </div> 
    </li>
  </ul>
  
  <ul class="comments">
    <% @section.entries.comments_closing.each do |entry| %>
    <li class="<%= cycle('alpha','','','omega') %>">
      <div class="card">
        <p class="type"><%= entry.entry_type if entry.has_type? %></p>
        <%= link_to entry.title, entry_path(entry) %>
        <date><%= entry.comments_close_date.date %></date>
      </div>
    </li>
    <% end %>
  </ul>

  <h2 class="title">Comment Period <span>Opening</span></h2>
  <ul class="comments">
    <% @section.entries.comments_opening.each do |entry| %>
    <li class="<%= cycle('alpha','','','omega') %>">
      <div class="card">
        <p class="type"><%= entry.entry_type if entry.has_type? %></p>
        <%= link_to entry.title, entry_path(entry) %>
        <date><%= entry.comments_close_date.date %></date>
    </li>
    <% end %>
  </ul>

<h2 class="title">Articles published on <span><%= @publication_date %></span></h2>

<% @section.entries.published_on(@publication_date).each do |entry| %>
  <article>
    <h1><%= link_to entry.title, entry_path(entry) %></h1>
    <dl>
      <dt>Length</dt>
      <dd><%= pluralize(entry.human_length, "page") %></dd>
      <dt>Type</dt>
      <dd><%= entry.entry_type if entry.has_type? %></dd>
      <dt>Agency</dt>
      <dd><%= link_to entry.agency.name, agency_path(entry.agency) %></dd>
    </dl>  
  </article>
<% end %>
