<% form_for :citation, :url => citation_search_path, :html => {:method => :get} do %>
  <%= select_tag :volume,
        options_for_select([['Volume','75']] + (59..75).to_a.reverse.map {|v| ["#{v} (#{v+1935})", v.to_s] },params[:volume] ) %>
  <%= text_field_tag :page, local_assigns[:page] || params[:page], :placeholder => 'Page Number', :class => 'pagenumber' %>
  <%= submit_tag 'Go', :class => 'btn' %>
<% end %>