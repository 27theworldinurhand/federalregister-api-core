<%= 
  calendar(
      :year => @date.year,
      :month => @date.month,
      # ugly hack to punch in data attributes
      :table_class => "calendar\" data-calendar-year=\"#{@date.year}\" data-calendar-month=\"#{@date.month}",
      :previous_month_text => link_to_if(@date.months_ago(1) > PublicInspectionDocument.earliest_filing_date, '&laquo; Prev', public_inspection_documents_by_month_path(@date.months_ago(1)), :class => 'nav'),
      :next_month_text =>     link_to_if(@date.months_since(1) <= PublicInspectionDocument.latest_filing_date, 'Next &raquo;', public_inspection_documents_by_month_path(@date.months_since(1)), :class => 'nav'),
      :abbrev => (0..0),
      :month_name_class => "monthName year_#{@date.year}"
  ) do |d|
    if d.wday == 0 || d.wday == 6
      [d.mday, {:class => "weekend"}]
    elsif d == @current_date
      [link_to(d.mday, public_inspection_documents_by_date_path(d)), {:class => "current" }]
    elsif @public_inspection_dates.include?(d)
      [link_to(d.mday, public_inspection_documents_by_date_path(d)), {:class => "published" }]
    else
      [d.mday]
    end
  end
%>
