<%= link_to document_title, document.pdf.url %>
<div class="details">
  <div class="column pdf">
    <span class="pdf small"></span> 
    <%= link_to 'PDF', document.pdf.url %> - <%= number_to_human_size document.pdf_file_size %>; <%= pluralize document.num_pages, 'page' %>
  </div>
  <div class="column dates">
    <%- if date && document.filed_at.to_date == date %>
      <span class="new_document"></span>
    <%- end %>
    <span class="filed_at">Filed on: <%= document.filed_at.to_s(:short_date_then_time) %></span>
    <span class="publication_date">Publication Date:
      <%- if document.publication_date.present? %> 
        <%= Issue.find_by_publication_date(document.publication_date) ? link_to(document.publication_date, entries_by_date_path(document.publication_date) ) : document.publication_date  %>
      <%- end %>
    </span>
  </div>

  <div class="column doc_numbers">
    <span class="document_number">
      FR Document: <%= link_to_if document.document_number.present? && document.publication_date && Date.today >= document.publication_date, document.document_number, "/a/#{document.document_number}" %>
    </span>

    <%- document.docket_numbers.each do |docket_number| %>
        <span class="docket_id"><%= docket_number.number %></span>
    <%- end %>
  </div>
</div>
