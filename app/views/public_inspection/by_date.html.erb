<% feed_autodiscovery entries_url(:format => :rss), 'All Articles from the Federal Register', :search_conditions => {} %>

<% title "Articles for #{@date.to_formatted_s(:pretty)}" %>
<div class="title"><span><%= @date %> Issue</span></div>

<div id="content_area">

<h2>Special Filing</h2>
<%= render :partial => "documents", :locals => {:documents_without_agencies => @special_documents.entries_without_agencies, :agencies => @special_documents.agencies} %>

<h2>Regular Filing</h2>
<%= render :partial => "documents", :locals => {:documents_without_agencies => @regular_documents.entries_without_agencies, :agencies => @regular_documents.agencies} %>

</div> <!-- END CONTENT AREA -->



<%# TODO HELP-DESIGN move this to the top of the markup and then pull it over %>
<% aside_tag(:id => 'sidebar') do %>
  
  <% section_tag(:id => 'date_chooser') do %>
    <div id="calendar_wrapper">
      <%= render :esi => public_inspection_documents_by_month_path(@date, :current_date => @date.to_s(:iso)) %>
    </div>
  <% end -%>

  <% section_tag(:id => 'meta_toc') do %>
    <div class="TOC aside_box">
      <ul>
        <% @regular_documents.agencies.each do |agency| %>
          <li>
            <a href="#<%= agency.slug %>"><%= agency.name %></a> 
            <span class="count_pill"><%= agency.entry_count %></span>
          </li>
        <% end -%>
      </ul>
    </div>    
  <% end -%>
  
<% end -%>
