<% if search.filters.present? %>
<ul class="active_filter_list">
  <% search.filters.each do |filter| %>
  <li>
    <span class="type"><%= filter.label %></span>
    <span class="name"><%= h filter.name %></span>
    <%= link_to 'Remove', search_removing_filter(filter.condition, filter.value), :title => 'Remove Filter', :class => 'remove' %>
  </li>
  <% end %>
</ul>
<% end %>