<% add_javascript { @map.to_js } %>

<div id="map" style="width: 950px; height: 400px"></div>

<h2>Entries within <%= pluralize(@dist, 'mile') %> of <%= @user_location.city %>, <%= @user_location.region %></h2>

<ul>
<% @places.sort_by_distance_from(Place.new(:latitude => @lat, :longitude => @long)).group_by(&:distance_groups).each do |distance, places| %>
    <li>
      Within <%= pluralize(distance, 'miles') %>
      <ul>
        <% places.map(&:entries).flatten.sort_by{|e| e.publication_date}.reverse.each do |entry| %>
          <li>
            <span class='entry_date'><%= entry.publication_date.to_s %></span>
            <%= link_to entry.title, entry_path(entry) %>
          </li>
        <% end %>
      </ul>
    </li>
<% end %>
</ul>