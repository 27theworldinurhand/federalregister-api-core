<% title "Topics starting with '#{@letter}'" %>

<h1 class="title"><span>Explore Topics</span></h1>

<div class="filters">
  <h4>Live Filter</h4>
  <ul>
    <li class="livesearch">
      <label for="live_filter_agencies" class="hide">Filter Agencies</label>
      <input title="Filter agencies" placeholder="Filter Agencies" id="live_filter_agencies">
    </li>  
  </ul>
  
  <h4>By Letter</h4>
  <ul class="actions">
    <% @letters.each do |letter| %>
      <li class="<%='on' if letter == @letter %>"><%= link_to letter.upcase, topics_by_letter_path(letter) %></li>
    <% end %>
  </ul>
</div>


<div class="result_set topic_list_container">
  
  <div class="titlebar topic_list_info">
    <div class="article_count">
      <h2 class="title_bar"><span class="small_stack">Topics <span>Found</span></span> <span id="topic_count"><%= @topics.count %></span></h2>
    </div>

    <div class="actions">
      <ul>
        <li>Alpha</li>
        <li class="on">
          <a class="asc" href="#asc">Asc</a>
        </li>
        <li>
          <a class="dec" href="#dec">Dec</a>
        </li>
      </ul>
      <ul>  
        <li>Popularity</li>
        <li>
          <a class="pop-asc" href="#pop-asc">Asc</a>
        </li>
        <li>
          <a class="pop-dec" href="#pop-dec">Dec</a>
        </li>
      </ul>
    </div>
  </div>

  <ul id="topic_list">
    <% @topics.each do |topic| %>
      <li>
        <span class="individual_topic_count" title="Number of associated articles"><%= topic.entries_count %></span> 
        <%= link_to topic.name, topic_path(topic) %>
      </li>
    <% end %>
  </ul>
</div>
