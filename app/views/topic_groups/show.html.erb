<% title @topic_group.name %>
<% feed_autodiscovery topic_group_path(@topic_group, :format => :rss) %>

<%= render :partial => "entries/list", :locals => {:entries => @entries, :search_params => {:topic_group => @topic_group}} %>

<% content_for :sidebar do %>
  <%# TODO HELP-DESIGN make wrappers and slide these up %>
  <% unless @agencies.blank? %>
    <h3>Agencies Using this Topic</h3>
    <div class='chart size_<%=@agencies.size%>'><%= pie_3d_chart(:alt => 'Agencies using this Topic Group', :truncate_legend => '30', :counts => true, :legend_location => 'bottom', :records => @agencies, :value_method => :entries_count, :legend_method => :name, :max => 10, :size => ['230','350'], :color_range => ['005073','84cedb'], :transparent_bg => true) %></div>
  <% end %>
  
  <% unless @granule_classes.blank? %>
    <h3>Entry Types for Topic</h3>
     <div class='chart size_<%=@granule_classes.size%>'><%= pie_3d_chart(:alt => 'Entry Types', :truncate_legend => '30', :counts => true, :legend_location => 'bottom', :records => @granule_classes, :value_method => :count, :legend_method => :granule_class, :size => ['230','200'], :color_range => ['005073','84cedb'], :transparent_bg => true) %></div>
  <% end %>
  
  <% if @topic_group.topics.size > 1 %>
    <h3>This topic summarizes the following topics from the Federal Register:</h3>
    <ul>
    <% @topic_group.topics.each do |topic| %>
      <li><%= topic.name %></li>
    <% end %>
    </ul>
  <% end %>
  
  <%= render :partial => 'topics_tagcloud', :locals => {:topic_groups => @related_topic_groups, :title => 'Related Topics'} %>
  
<% end %>