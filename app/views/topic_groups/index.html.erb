
<h2>Topics by Letter</h2>
<ul>
<% @letters.each do |letter| %>
  <li><%= link_to letter.upcase, topic_groups_by_letter_path(letter) %></li>
<% end %>
</ul>

<h2>Popular Topics</h2>
<ul>
<% @popular_topic_groups.each do |topic_group| %>
  <li><%= link_to topic_group.name, topic_group_path(topic_group) %> (<%= topic_group.entries_count %>)</li>
<% end %>
</ul>