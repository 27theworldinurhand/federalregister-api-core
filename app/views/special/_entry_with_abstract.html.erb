<div class="news_content">
  <h3><%= link_to entry.curated_title, entry_path(entry, :utm_source => 'homepage', :utm_medium => 'slideshow', :utm_content => 'header') %></h3>
 
  <p class="metadata">A <%= entry.entry_type %> by <%= entry.agencies.excluding_parents.map{|a| link_to a.name, agency_path(a, :utm_source => 'homepage', :utm_medium => 'slideshow') }.to_sentence %> on 
  <%= link_to date_tag(entry.publication_date, :datetime => entry.publication_date.to_s(:iso)), entries_by_date_path(entry.publication_date, :utm_source => 'homepage', :utm_medium => 'slideshow') %></p>

  <%= render(:partial => "special/lede_photo", :object => entry.lede_photo) if entry.lede_photo %>
  <p class="summary"><%= truncate_words(entry.curated_abstract, :length => 500) %></p>

  <% if false && entry.comments_close_on && entry.comments_close_on > Time.current.to_date %>
    <p class="comments_close">
      Comment period ends soon!
    </p>
  <% end %>
</div>
