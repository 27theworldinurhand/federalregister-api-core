<% feed_autodiscovery entries_path(:format => :rss) %>
<% add_column_class('home') %>

<h1 class="title"><span>Today's Issue</span></h1>

<img src="/images/carouselcomp.png" />

<hr />

<div class="section_news_boxes grid_16 alpha omega" style="clear:both">
  <% @sections.each do |section| %>
  <div class="grid_8 <%= cycle('alpha','omega')%>">
      <div class="newsbox">
        <h2><%= link_to section.title, section_path(section) %></h2>
        <ul>
          <% entries = section.highlighted_entries[1..3] %>
          <% if entries %>
            <% entries.each do |entry| %>
              <li><%= link_to entry.title, entry_path(entry) %></li>
            <% end -%>
          <% end -%>  
        </ul>
        <%= link_to 'See more', section_path(section), :class => 'see_more awesome' %>
      </div>
    </div>  
  <% end -%>  
</div>


<% if false #!@closing_soon.empty? %>
  <div class="clear marginBottom widget">
    <h2 class="header flatBottom">Comments Closing In Next 7 Days (<%= @closing_soon.map{|a,e| e.size}.sum %>)</h2>
    <ul class="indent marginTop recent_prorule">
    <% @closing_soon.each do |agency, entries| %>
      <li>
        <%= link_to agency.name, agency_path(agency) %> <span class='details'>(<%= entries.size %>)</span>
        <ul class="raquo">
          <% entries.each do |entry| %>
            <li><%= link_to entry.title, entry_path(entry) %></li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </div>
<% end %>

