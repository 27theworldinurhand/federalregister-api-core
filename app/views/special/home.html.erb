<% feed_autodiscovery entries_path(:format => :rss), "Recent Articles from the Federal Register" %>
<% feed_autodiscovery highlighted_entries_path(:format => :rss), "Featured Articles from the Federal Register" %>
<% add_column_class('home') %>

<h1 class="title"><span><%= IssueApproval.latest_publication_date.try(:to_s, :wday_and_pretty_date) %></span></h1>

<div id="current_issue">
    <%= link_to 'Current Issue', IssueApproval.latest_publication_date.try(:to_s, :wday_and_pretty_date) %>
    <%= render :esi => entry_statistics_by_date_path(Entry.latest_publication_date) %>
</div>

<div id="top_news_promo" class="grid_11 alpha">

  <ul class="section_nav">
    <% @sections.each do |section| %>
      <li class="<%= 'one_word' if section.title.split(' ').count == 1 %> <%= section.slug %>">
          <%= link_to section.title, "#promo_#{section.slug}" %>
      </li>  
    <% end -%>
  </ul>


  <div id="slideshow" class="dragdealer">
    <div class="handle">
      <% @sections.each do |section| %>
        <div id="promo_<%= section.slug %>">
            <% entry = section.entries.highlighted.first %>
            <% if entry %>
              <%= render :partial => 'special/entry_with_abstract', :locals => {:entry => entry} %>  
              <%= render :partial => 'stats', :locals => {:section => section}  %>
            <% end %>
        </div>  
      <% end -%>
    </div>
  </div>
</div>  

<% section_tag(:id => 'news') do %>
  <h1>News</h1>
  <p>Happy 75</p>
<% end -%>

<% section_tag(:id => 'popular') do %>
  <h1>Popular</h1>
  <p>What's popular</p>
<% end -%>

<% section_tag(:id => 'agency_highlight') do %>
  <%= render :esi => agency_highlight_path %>
<% end -%>

<h2 class="title_bar">What's in the Federal Register?</h2>

<div id="learn">
  <%= render :partial => 'about_fr_articles' %>
</div> <!-- END learn -->

<div class="title_bar">
  <h2>New items in the FR</h2>
  <%= link_to 'Subscribe', highlighted_entries_path(:format => :rss), :class => 'button rss' %>
</div>

<div id="section_news_boxes">
  <% @sections.each do |section| %>
  <div class="fr_section_wrapper grid_8 <%= cycle('alpha','omega') %>">
      <div class="fr_section <%= section.slug %>">
        <h2><%= link_to section.title, section_path(section) %></h2>
        <ul class="bullets">
          <% entries = section.entries.highlighted[1..3] %>
          <% if entries %>
            <% entries.each do |entry| %>
              <li><%= link_to entry.title, entry_path(entry) %></li>
            <% end -%>
          <% end -%>  
        </ul>
      </div>
    </div>  
  <% end -%>  
</div>
