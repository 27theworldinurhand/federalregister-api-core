<div class="currentevents span-15">
  <h2 class="icon cal">Today's entries <span>(<%= @entries.length %>)</span></h2>
  <div class="daily">
    <ul class="items">
    <% @entries.each_with_index do |entry, i| %>
      <li>
        <p class="number"><%= i+1 %></p>
        <%= link_to truncate(entry.title, :length => 100), entry_path(entry), :class => "entry" %>
        <%= link_to(entry.agency.name, agency_path(entry.agency), :class => "agency") if entry.agency %>
      </li>
    <% end %>
    </ul>
  </div>
</div>

<% content_for :sidebar do %>
  <h2 class="icon agency">Featured</h2>
	<ul id='featured_agency_buttons' class="group">
		<li id='month'  ><div class="btn"><%= link_to '30 days', '#' %></div></li>
		<li id='quarter'><div class="btn"><%= link_to '90 days', '#' %></div></li>
		<li id='year'   ><div class="btn"><%= link_to '1 Year',  '#' %></div></li>
	</ul>
  <% %w(month quarter year).each do |range_type| %>
  	<ul id='agency_count_<%= range_type %>' class='featured_agencies'>
	  <% @featured_agencies.each do |agency| %>
	    <li class='tooltip'>
			<%= link_to agency.sidebar_name, agency_path(agency) %>
			<span class='count'><%= agency.entry_counts_since(range_type) %></span>
			<span class='help_text'><%= agency.name %></span>
		</li>
	  <% end %>
	  </ul>
	<% end %>
<% end %>

