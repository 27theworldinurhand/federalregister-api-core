<% feed_autodiscovery entries_url(:format => :rss), "Recent Articles from the Federal Register" %>
<% feed_autodiscovery highlighted_entries_url(:format => :rss), "Featured Articles from the Federal Register" %>
<% add_column_class('home') %>

<h1 class="title"><span><%= @current_issue.publication_date.try(:to_s, :wday_and_pretty_date) %></span></h1>

<%= render(:partial => "special/preview_warning") if @preview %>

<% if Issue.current_issue_is_late? %>
  <%= render :partial => "special/issue_late" %>
<% else %>
  <%= render :partial => "entries/statistics_by_date", :locals => {:issue => @current_issue, :label => "Current Issue", :other_dates => true} %>
<% end %>

<div class="row">
  <% section_tag(:id => 'top_news_promo') do %>
    <%= render :partial => 'special/promo', :locals => {:sections => @sections, :publication_date => @approved_issue.publication_date}  %>
  <% end -%>

  <% section_tag(:id => 'news') do %>
    <%= render :partial => 'special/celebrating_75_years' %>
  <% end -%>
  
  <%= render :partial => 'special/legal_disclaimer' %>
  
</div>

<div class="row">
  <% section_tag(:id => 'fr_movie', :class => 'with_icon') do %>
    <div class="header_with_icon ">
      <h1>About Federal Register 2.0</h1>
    </div>  
    <object width="420" height="261"><param name="movie" value="http://www.youtube-nocookie.com/v/ADhP0KSmjkQ&amp;hl=en_US&amp;fs=1?rel=0"></param><param name="allowFullScreen" value="true"></param><param name="allowscriptaccess" value="always"></param><embed src="http://www.youtube-nocookie.com/v/ADhP0KSmjkQ&amp;hl=en_US&amp;fs=1?rel=0" type="application/x-shockwave-flash" allowscriptaccess="always" allowfullscreen="true" width="420" height="261"></embed></object>
    
    <p>Know what you're looking for? <%= link_to 'Retrieve articles by citation', citation_search_path %></p>
    <p><%= link_to 'Subscribe to daily feed', entries_url(:format => :rss), :class => 'rss' %></p>
    
  <% end -%>

  <% section_tag(:id => 'popular', :class => 'with_icon') do %>
    <%= render :esi => popular_entries_path %>
  <% end -%>
</div>

<div class="row">
  <% section_tag(:id => 'learn', :class => 'with_icon') do %>
    <%= render :partial => 'special/about_fr_articles' %>
  <% end -%>
</div>

<div class="row">
  <%= render :partial => 'special/section_news', :locals => {:sections => @sections, :publication_date => @approved_issue.publication_date} %>
</div>
