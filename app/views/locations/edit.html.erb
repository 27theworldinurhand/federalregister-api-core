<% title 'Change my Location' %>

<% if @message %>
  <p class="error"><%= @message %></p>
<% end %>

<% form_for @location, :url => location_path, :html_options => {:method => :put} do |f| %>
  <%= hidden_field_tag :redirect_to, request.referer %>
  <%= f.text_field :name, :title => "(eg '94118', 'Seattle', etc)" %>
  <%= submit_tag 'Go', :class => "btn" %>
<% end %>