<div class="tip">
  <% if local_assigns[:size] %>
    <p class="entry">Entry <%= i + 1 %> of <%= size %></p>
  <% end %>
  <dl>
    <dt>Full Title:</dt>
    <dd><%= entry.title %></dd>
    <% if entry.agency %>
      <dt>Agency:</dt>
      <dd><%= entry.agency.name %></dd>
    <% end %>
      <dt>Date Entered:</dt>
      <dd><%= entry.publication_date.to_formatted_s(:pretty) %></dd>
  </dl>
</div>
