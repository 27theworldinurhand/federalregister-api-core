<% title "Search Results for '#{h @search_term}'" %>


<%= page_entries_info @entries %>

<%= will_paginate @entries %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Title</th>
      <th>Agency</th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
    <tr>
      <td><%= entry.publication_date %></td>
      <td><%= entry.genre.capitalize_first %></td>
      <td><%= link_to truncate(entry.title, :length => 100), entry_path(entry) %></td>
      <td><%= link_to entry.agency.try(:name), agency_path(entry.agency) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @entries %>
