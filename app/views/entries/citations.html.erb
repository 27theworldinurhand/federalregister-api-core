<% title "Citations for: #{link_to @entry.title, entry_path(@entry)}" %>
<% add_javascript :src => 'citations' %>

<div class="title"><span>Citations and references</span></div>

<div id="content_area">
  <div id="citations">
    <h2>Citations</h2>
    <ul class="bullets">
      <%= render :partial => 'citation', :collection => @entry.citations %>
    </ul>
  </div>

  <div id="referencing_entries">
    <h2>Entries Referencing This</h2>
    <ul class="bullets">
      <%= render :partial => "referencing_entry", :collection =>  @entry.referencing_entries %>
    </ul>
  </div>
</div>

<% aside_tag(:id => 'sidebar') do %>  

  <% section_tag(:class => 'TOC aside_box') do %>  
    <h1>On This Page</h1>
    <ul>
      <li><%= link_to 'Citations', '#citations' %></li>
      <li><%= link_to 'Entries Referencing This', '#referencing_entries' %></li>
    </ul>
  <% end -%>

<% end -%>

