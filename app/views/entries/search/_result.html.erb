<li>
  <h4><%= link_to sanitize(entry.excerpts.title, :tags => %w(span), :attributes => %w(class)), entry_path(entry) %></h4>

  <div class="result_info">
    <span class="excerpts"><%= 
      if @search.term.blank? || entry.excerpts.full_text.blank?
        sanitize entry.excerpts.abstract, :tags => %w(span), :attributes => %w(class)
      else
        sanitize entry.excerpts.full_text, :tags => %w(span), :attributes => %w(class)
      end %></span>
  </div>
  <ul class="metadata">
    <li class="type"><%= entry.entry_type %></li>
    <li class="pub_date"><%= entry.publication_date %></li>
    <li class="agency"><%= entry.agencies.excluding_parents.map{|agency| link_to(agency.name, agency_path(agency))}.join(' :: ') %></li>
    <li><%= link_to 'PDF', entry.source_url('pdf'), :class => 'button format pdf small' %></li>
  </ul>  
</li>