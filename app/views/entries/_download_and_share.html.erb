<div class="box">
  <div class="grid_4 alpha">
    <h4>Download As</h4>
    <%= link_to "PDF", entry.source_url('pdf'), :class => 'button format list pdf', :title => 'Download article as PDF' %>
    <%= link_to "XML", entry_path(entry, :format => :xml), :class => 'button format list xml', :title => 'Download article as XML' %>
  </div>
  <div class="grid_6 omega">
    <h4>Share This</h4>
    <%= link_to_twitter(entry) %>
    <%= link_to_facebook(entry) %>
    <%= link_to_reddit(entry) %>
    <%= link_to_digg(entry) %>
    
    <%# TODO HELP-RUBY make this real %>
    <a href="#" class="button list social email">E-Mail</a>
  </div>
</div>