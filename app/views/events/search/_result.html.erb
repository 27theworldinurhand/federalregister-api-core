<li>
  <h4><%= event.type %>: <%= link_to sanitize(event.title, :tags => %w(span), :attributes => %w(class)), entry_path(event.entry) %></h4>

  <div class="result_info">
    <span class="date"><%= event.date %></span>
    <% if event.place %>
      <span class="location"><%= event.place.name %></span>
    <% end %>
    <br />
    <span class="agency"><%= event.entry.agencies_excluding_parents.map{|agency| link_to(agency.name, agency_path(agency))}.join(' :: ') %></span>
  </div>  
</li>