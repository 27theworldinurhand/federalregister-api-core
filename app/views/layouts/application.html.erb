<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
  <title>GovPulse | <%= yield :title %></title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="description" content="..." />
  <meta name="keywords" content="..." />
  <meta name="author" content="..." />
  
  <%= stylesheet_link_tag "screen", :media => :screen %>
  <%= stylesheet_link_tag "trifecta", :media => :screen %>
  <%= stylesheet_link_tag "utility", :media => :screen %>
  <%= stylesheet_link_tag "form", :media => :screen %>
  
  <%= javascript_include_tag 'jquery.js'                %>
  <%= javascript_include_tag 'jquery-ui.js'             %>
  <%= javascript_include_tag 'jrails.js'                %>
  <%= javascript_include_tag 'application.js'           %>
  <%= javascript_include_tag 'jquery.sparkline.min.js'  %>
  <%= javascript_include_tag 'jquery.tools.min.js'      %>
  <%= javascript_include_tag 'jquery.qtip-1.0.0-rc3.js' %>
  <%= javascript_include_tag 'jquery.filter.js'         %>
  <%= javascript_include_tag 'frontend.js'              %>
  <%= javascript_include_tag 'jquery.toggleDisabled.js' %>
  <%= javascript_include_tag 'jquery.horizontalCount.js'%>
  <%= javascript_include_tag 'tagcloud.js' %>

  <%= yield :javascripts %>

  <%= yield :feeds %>
</head>
<body>

  <!-- WRAPPER -->
  <div id="wrapper" class="group">

    <!-- HEADER -->
    <div id="header">
      <div class="capitol"></div>      
      
      <div class="type">
        <a href="/" title="govpulse home"><h1>gov<span>pulse</span></h1></a>
      </div>

    </div>
      <div id="nav">
        <div class="search">
          <form action="<%= entries_search_path %>" method="get">
            <!--Search--> 
            <%= text_field_tag :q, @search_term %>
            <%= submit_tag 'Search' %>
          </form> 
        </div>    
        <ul>
          <li><%= link_to 'Agencies', agencies_path, :title => "Browse by Agency" %> / </li>
          <li><%= link_to 'Date', calendar_month_path(Date.today.year, sprintf("%02d", Date.today.month))%> /</li>
          <li><%= link_to 'Entries', entries_search_path, :title => 'Search Entries' %> / </li>
          <li><%= link_to 'Location', maps_path, :title => "View entries by location" %> / </li>
          <li><%= link_to 'Topics', topic_groups_path, :title => "Browse by Topic" %> / </li>
          <li><%= link_to 'About', about_path, :title => "About the project" %></li>
        </ul>
      </div>      
  <!-- HEADER end -->
  
    <!-- MAIN -->
    <div id="main" class="group<%= ' cols' if yield :sidebar %>">

      <% unless flash[:notice].blank? %>
        <div class="alert">
          <div class="confirm"><%= flash[:notice] %></div>
        </div>
      <% end %>

      <% unless flash[:error].blank? %>
      <div class="alert">
        <div class="error"><%= flash[:error] %></div>
      </div>
      <% end %>
    
      <!-- content -->
      <div class="content">
          <% if yield :title %>
            <div class="header group"><h1><%= yield :title %></h1></div>
          <% end %>
          
          <% if yield :precolumn %>
            <div class="precolumn">
              <%= yield :precolumn %>
            </div>
          <% end %>
          
          <div class="col1">
            <%= yield %>
          </div>
          
          <% if yield :sidebar %>
          <div class="col2">
            <div class="sidebar">
              <%= yield :sidebar %>
            </div>
          </div>
          <% end %>
      </div>
      <!-- content end -->
      
      
    </div>
    <!-- MAIN end -->

  </div>
  <!-- WRAPPER end -->


    <!-- FOOTER -->
    <div id="footer">
      <h4>Copyright 2009 , Trifecta Studiosâ„¢</h4>
    </div>
    <!-- FOOTER end -->


</body>
</html>
