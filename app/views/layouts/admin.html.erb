<!doctype html> 
<html lang="en"> 
<head> 
  <title>FR2 Admin<%= " | #{yield :title}" if yield(:title) %></title>
  <meta charset="utf-8">
  
  <%= stylesheet_link_tag "reset",                    :media => :screen %>
  <%= stylesheet_link_tag "text" ,                    :media => :screen %>
  <%= stylesheet_link_tag "admin/grid",               :media => :screen %>
  <%= stylesheet_link_tag "admin/buttons",            :media => :screen %>
  <%= stylesheet_link_tag "../ContentFlow/contentflow_src",  :media => :screen %>
  <%= stylesheet_link_tag "admin/formtastic",         :media => :screen %>
  <%= stylesheet_link_tag "admin/formtastic_changes", :media => :screen %>
  <%= stylesheet_link_tag "admin/screen",             :media => :screen %>
  <%= stylesheet_link_tag "admin/jquery.Jcrop",       :media => :screen %>
  <%= stylesheet_link_tag "admin/navigation",         :media => :screen %>
  <%= stylesheet_link_tag "admin/tablesorter",        :media => :screen %>
  <%= stylesheet_link_tag "admin/jqModal",            :media => :screen %>
  
</head>
<body>
    
  <!-- WRAPPER -->
  <div id="wrapper" class="container_12">
    
    <!-- HEADER -->
    <header>
      <hgroup>
        <h1><a href="/" title="federal register home">Federal Register :: Admin</a></h1>
      </hgroup>
      
      <nav class="primary grid_12">
        <ul>
          <% if current_user %>
          <li><%= link_to 'Home', admin_home_path, :class => "button tan home" %></li>
          <li><%= link_to 'Agency Names', admin_agency_names_path, :class => "button tan" %></li>
          <li><%= link_to 'Topic Names', admin_topic_names_path, :class => "button tan" %></li>
          <li><%= link_to 'Users', admin_users_path, :class => "button tan users" %></li>
          <li><%= link_to 'Sections', admin_issue_sections_path(Entry.last.publication_date.to_s(:mdy_dash)), :class => "button tan" %></li>
          <% end %>
        </ul>
      </nav>
      
      <nav class="utility grid_12">
        <% if current_user %>
        <p>Hi, <%= current_user.first_name %>!</p>
        <% end %>
        <ul>
          <% if current_user %>
          <li><%= link_to 'Change Password', edit_admin_user_password_path(current_user), :class => "button small tan" %></li>
          <li><%= link_to 'Logout', admin_logout_path, :class => "button small tan" %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    
    <div id='content' class="grid_12">
      <% if yield(:super_title) %>
        <h1 class="grid_12"><%= yield(:super_title) %></h1>
      <% end %>
    
      <% if yield(:nav_secondary) %>
        <nav class="secondary grid_2">
          <ul>
            <%= yield(:nav_secondary) %>
          </ul>
        </nav>
      <% end %>
    
      <% if flash[:notice] %>
      <div class="flash notice grid_10 push_1">
        <%= flash[:notice]%>
      </div>
      <% end %>

      <% if flash[:error] %>
      <div class="flash error grid_10 push_1">
        <%= flash[:error]%>
      </div>
      <% end %>
    
      <% if yield(:title)%>
       <h1 class="grid_9"><%= yield(:title) %></h1>
      <% end %>
    
      <%= yield %>
      
    </div> <!-- content end -->
    
    <footer>
      
    </footer>
  </div> <!-- wrapper end -->
  
  <div class='jqmOverlay'></div>
  <div class='modal jqmWindow'>
    <div id='crop_area'>
      <div id="crop-box"></div>
      <div id="preview">
        <% if @entry.present? %>
          <%= image_tag(@entry.lede_photo.photo.url(:medium)) if @entry.lede_photo %>
        <% end %>
      </div>
    </div>
  </div>
  
  <%= jquery_include_tag %>
  <%= jquery_ui_include_tag %>
  <%= javascript_include_tag 'jquery.tablesorter' %>
  <%= javascript_include_tag 'admin/admin' %>
  
  <%= yield :javascripts %>
  
  <!-- <script>
    (function(){document.body.appendChild(document.createElement('script')).src='http://gridder.andreehansson.se/releases/latest/960.gridder.js';})();
  </script> -->
  
  <script type="text/javascript" src="http://use.typekit.com/qbb7wou.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
</body>
</html>